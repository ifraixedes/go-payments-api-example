{
  "type": "object",
  "title": "A payment data",
  "description": "Contains all the information of a payment.",
  "required": [
    "type",
    "id",
    "version",
    "organisation_id",
    "attributes"
  ],
  "properties": {
    "type": {
      "type": "string",
      "enum": [
        "Payment"
      ]
    },
    "id": {
      "type": "string",
      "pattern": "^[\\da-f]{8}-[\\da-f]{4}-[\\da-f]{4}-[\\da-f]{4}-[\\da-f]{12}$/i",
      "readOnly": true
    },
    "version": {
      "type": "integer",
      "format": "int64",
      "readOnly": true
    },
    "organisation_id": {
      "type": "string",
      "pattern": "^[\\da-f]{8}-[\\da-f]{4}-[\\da-f]{4}-[\\da-f]{4}-[\\da-f]{12}$/i"
    },
    "attributes": {
      "type": "object",
      "required": [
        "amount",
        "beneficiary_party",
        "charges_information",
        "currency",
        "debtor_party",
        "end_to_end_reference",
        "fx",
        "numeric_reference",
        "payment_id",
        "payment_purpose",
        "payment_scheme",
        "payment_type",
        "processing_date",
        "reference",
        "scheme_payment_sub_type",
        "scheme_payment_type",
        "sponsor_party"
      ],
      "properties": {
        "amount": {
          "type": "string",
          "pattern": "^[\\d]+.[\\d]{2,}$"
        },
        "beneficiary_party": {
          "type": "object",
          "required": [
            "account_name",
            "account_number",
            "account_number_code",
            "account_type",
            "address",
            "bank_id",
            "bank_id_code",
            "name"
          ],
          "properties": {
            "account_name": {
              "type": "string"
            },
            "account_number": {
              "type": "string"
            },
            "account_number_code": {
              "type": "string"
            },
            "account_type": {
              "type": "integer"
            },
            "address": {
              "type": "string"
            },
            "bank_id": {
              "type": "string"
            },
            "bank_id_code": {
              "type": "string"
            },
            "name": {
             "type": "string"
            }
          }
        },
        "charges_information": {
          "type": "object",
          "required": [
            "bearer_code",
            "sender_charges",
            "receiver_charges_amount",
            "receiver_charges_currency"
          ],
          "properties": {
            "bearer_code": {
              "type": "string"
            },
            "sender_charges": {
              "type": "array",
              "title": "The Sender_charges Schema",
              "items": {
                "type": "object",
                "required": [
                  "amount",
                  "currency"
                ],
                "properties": {
                  "amount": {
                    "type": "string",
                    "pattern": "^[\\d]+.[\\d]{2,}$"
                  },
                  "currency": {
                    "type": "string"
                  }
                }
              }
            },
            "receiver_charges_amount": {
              "type": "string",
              "pattern": "^[\\d]+.[\\d]{2,}$"
            },
            "receiver_charges_currency": {
              "type": "string"
            }
          }
        },
        "currency": {
          "type": "string"
        },
        "debtor_party": {
          "type": "object",
          "required": [
            "account_name",
            "account_number",
            "account_number_code",
            "address",
            "bank_id",
            "bank_id_code",
            "name"
          ],
          "properties": {
            "account_name": {
              "type": "string"
            },
            "account_number": {
              "type": "string"
            },
            "account_number_code": {
              "type": "string"
            },
            "address": {
              "type": "string"
            },
            "bank_id": {
              "type": "string"
            },
            "bank_id_code": {
              "type": "string"
            },
            "name": {
              "type": "string"
            }
          }
        },
        "end_to_end_reference": {
          "type": "string"
        },
        "fx": {
          "type": "object",
          "required": [
            "contract_reference",
            "exchange_rate",
            "original_amount",
            "original_currency"
          ],
          "properties": {
            "contract_reference": {
              "type": "string"
            },
            "exchange_rate": {
              "type": "string",
              "pattern": "^[\\d]+.[\\d]{2,}$"
            },
            "original_amount": {
              "type": "string",
              "pattern": "^[\\d]+.[\\d]{2,}$"
            },
            "original_currency": {
              "type": "string"
            }
          }
        },
        "numeric_reference": {
          "type": "string",
          "pattern": "^[\\d]+$"
        },
        "payment_id": {
          "type": "string"
        },
        "payment_purpose": {
          "type": "string"
        },
        "payment_scheme": {
          "type": "string"
        },
        "payment_type": {
          "type": "string"
        },
        "processing_date": {
          "type": "string",
          "pattern": "^[\\d]{4,4}-[\\d]{2,2}-[\\d]{2,2}$"
        },
        "reference": {
          "type": "string"
        },
        "scheme_payment_sub_type": {
          "type": "string"
        },
        "scheme_payment_type": {
          "type": "string"
        },
        "sponsor_party": {
          "type": "object",
          "required": [
            "account_number",
            "bank_id",
            "bank_id_code"
          ],
          "properties": {
            "account_number": {
              "type": "string"
            },
            "bank_id": {
              "type": "string"
            },
            "bank_id_code": {
              "type": "string"
            }
          }
        }
      }
    }
  },
