  "post": {
    "tags": [ "payment" ],
    "summary": "Create a new payment.",
    "operationId": "paymentsPost",
    "parameters": [
      {
        "$ref": "../headers/accept-api-v1.json"
      }
    ],
    "requestBody": {
      "required": true,
      "content": {
        "application/json": {
          "schema": {
            "$ref": "../schemas/payment.json"
          }
        }
      }
    },
    "responses": {
      "201": {
        "description": "ID of the new payment.",
        "headers": {
          "Content-Length": {
            "description": "The length of the content.",
            "schema": {
              "type": "integer",
              "format": "int64"
            }
          }
        },
        "content": {
          "application/json": {
            "schema": {
              "type": "object",
              "required": [
                "data"
              ],
              "properties": {
                "data": {
                  "type": "object",
                  "required": [
                    "id"
                  ],
                  "properties": {
                    "id": {
                      "type": "string",
                      "pattern": "^[\\da-fA-F]{8}-[\\da-fA-F]{4}-[\\da-fA-F]{4}-[\\da-fA-F]{4}-[\\da-fA-F]{12}$"
                    }
                  }
